<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DiscoveryActivity">

    <ImageView
        android:id="@+id/imageView_NavArrow"
        android:layout_width="109dp"
        android:layout_height="123dp"
        android:layout_centerHorizontal="true"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/ic_navigation_black_24dp" />

    <TextView
        android:id="@+id/textView_Distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView_NavArrow"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="0dp"
        android:text="Distance" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_Hashtag_1"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="@dimen/screen_percentage_12"
            android:text="#Hashtag1"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView_Hashtag_2"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="#Hashtag2"
            android:textAlignment="center"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>